- user ||= current_user
.stats.stats-index
  a.css-br href="#{following_user_path(user)}" 
    strong.stat id="following_#{user.id}"
      = user.following.count
    |  フォロー中
  a href="#{followers_user_path(user)}" 
    strong.stat id="followers_#{user.id}"
      = user.followers.count
    |  フォロワー 
  strong.stat id="score_#{user.id}"
    = point
  |  pt
