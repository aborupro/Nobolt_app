<% if @user.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger">
       <%= @user.errors.count %>個のエラーがあります
    </div>
    <ul>
    <div clas="text-danger">
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </div>
    </ul>
  </div>
<% end %>
