<% provide(:title, '完登記録') %>

<div class="row">
  <div class="col-md-6 col-md-offset-3 center">
    <h1>完登記録</h1>
 
    <%= form_with(url: records_path, method: :get, remote: true) do |search_f| %>
      <%= search_f.label :prefecture_key, 'ジム検索' %>
      <%= search_f.select :prefecture_key,
      ["北海道","青森県","岩手県","宮城県","秋田県","山形県","福島県",
        "茨城県","栃木県","群馬県","埼玉県","千葉県","東京都","神奈川県",
        "新潟県","富山県","石川県","福井県","山梨県","長野県","岐阜県",
        "静岡県","愛知県","三重県","滋賀県","京都府","大阪府","兵庫県",
        "奈良県","和歌山県","鳥取県","島根県","岡山県","広島県","山口県",
        "徳島県","香川県","愛媛県","高知県","福岡県","佐賀県","長崎県",
        "熊本県","大分県","宮崎県","鹿児島県","沖縄県"
      ], selected: @selected_prefecture %>
    <% end %>

    <%= form_with(model: @record, url: '#', local: true) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <div>
        <%= f.label :gym_name, "ジム名" %>
        <%= f.select :gym_name, @gym_name, class: 'form-control' %>
        <p>ジムが見つからない場合はこちら⇨<%= link_to "新規ジム登録", gyms_path%></p>
      </div>

      <%= f.label :grade %>
      <%= f.select :grade, ['10級', '9級', '8級', '7級', '6級', '5級', '4級', '3級', '2級', '1級', '初段', '二段', '三段', '四級', '五段', '六段' ] %>

      <%= f.label :problem_id %>
      <%= f.text_field :problem_id, placeholder: "例）1番、スラブの四角、100°の棒など", class: 'form-control' %>

      <%= f.label :strong_point %>
      <div class="custom-control custom-switch">
        <%= f.check_box :strong_point, class:"custom-control-input", id:"customSwitch1", checked:"" %>
        <%= f.label :strong_point, "1度目のトライでクリアした場合にチェック", class:"custom-control-label", for:"customSwitch1"%>
      </div>

      <span class="picture">
        <%= f.label :picture %><span class="optional">任意</span>
        <%= f.file_field :picture%>
      </span>

      <%= f.submit "ジム登録", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>