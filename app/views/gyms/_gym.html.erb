<div class="gym_list">
  <%= link_to controller: 'records', action: 'new', selection_gym_name: gym.name do %>
    <%= image_tag gym.picture.url if gym.picture? %>
    <%= gym.name %>
    <%= gym.prefecture %>
    <%= gym.url if gym.url %>
    <%= gym.business_hours if gym.business_hours %>
    <%= gym.address if gym.address %>
    <%= gym.price if gym.price %>
  <% end %>
</div>